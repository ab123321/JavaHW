public class Vector {
    private double x;
    private double y;
    
    //поля
    //конструкторы
    //методы
    
    public Vector(double x, double y) {
        this.x = x;
        this.y = y;
    }
    
    public double getX() {
        return x;
    }
    
    public double getY() {
        return y;
    }
    
    public double getRho() {
        return Math.hypot(x, y);
    }
    
    public double getPhi() {
        return Math.atan2(y, x);
    }
    
}
